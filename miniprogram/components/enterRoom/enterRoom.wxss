/* 遮罩层 */
.shade {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.75);
  z-index: 10;
}
.container {
  width: 580rpx;
  height: 400rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #f4edda;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title {
  margin: 10px;
  font-size: 50rpx;
}
/* 取消按钮 */
.btn-cancel {
  margin: 10px;
  float: left;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif !important;
  background: linear-gradient(to left,#f2f5d0, #d4f5c1);
}
/* 确定按钮 */
.btn-confirm {
  margin: 10px;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif !important;
  background: linear-gradient(to left,#f2f5d0, #d4f5c1);
}
.input {
  padding: 15px 15px;
  position: relative;
  display: flex;
  align-items: center;
}